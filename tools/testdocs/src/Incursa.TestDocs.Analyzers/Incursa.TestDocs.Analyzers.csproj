<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <AssemblyName>Incursa.TestDocs.Analyzers</AssemblyName>
    <IsPackable>true</IsPackable>
    <PackageId>Incursa.TestDocs.Analyzers</PackageId>
    <Description>Roslyn analyzers for required XML documentation metadata on test methods.</Description>
    <Authors>Incursa</Authors>
    <Company>Incursa</Company>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageIcon>nuget_logo.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>analyzers;testdocs;documentation;mstest;xunit;nunit</PackageTags>
    <RepositoryType>git</RepositoryType>
    <IncludeBuildOutput>true</IncludeBuildOutput>
    <OutputItemType>Analyzer</OutputItemType>
    <PackageType>Analyzer</PackageType>
  </PropertyGroup>

  <ItemGroup>
    <!-- Required for Roslyn analyzer and code fix APIs. -->
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.12.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.12.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
    <None Include="..\..\..\..\assets\nuget_logo.png" Pack="true" PackagePath="\" />
    <AdditionalFiles Include="AnalyzerReleases.Shipped.md" />
    <AdditionalFiles Include="AnalyzerReleases.Unshipped.md" />
  </ItemGroup>

</Project>
